<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.edureka.java_j2ee.module8.inheritance.concreteclass.Employee" table="Employee">
		<id name="id" type="int" column="id">
			<generator class="increment" />
		</id>
		
		<property name="name">
		</property>
		
		<union-subclass name="com.edureka.java_j2ee.module8.inheritance.concreteclass.Regular_Employee" table="REGULAR_EMP">
			<property name="salary">
			</property>
			<property name="bonus">
			</property>
		</union-subclass>
		
		<union-subclass name="com.edureka.java_j2ee.module8.inheritance.concreteclass.Contract_Employee" table="CONTRACT_EMP">
			<property name="pay_per_hour">
			</property>
			<property name="contract_duration">
			</property>
		</union-subclass>
		
	</class>
	
</hibernate-mapping>    